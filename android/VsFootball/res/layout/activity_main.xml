<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dlyt_my"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rlyt_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp" >

        <ImageButton
            android:id="@+id/ibtn_titlebar_show_navi_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_show_navi_list" />

        <Button
            android:id="@+id/btn_titlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_bg"
            android:padding="2dp"
            android:text="Back"
            android:textColor="@color/black"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/ibtn_titlebar_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_msg"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_titlebar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/login_title"
            android:textColor="@android:color/background_dark"
            android:textSize="25sp" />

        <ImageButton
            android:id="@+id/ibtn_titlebar_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_add" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/black" >
        </RelativeLayout>
    </RelativeLayout>
    <TextView
        android:id="@+id/tv_ad"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:layout_alignParentBottom="true"
        android:background="#888888"
        android:gravity="center"
        android:text="Banner AD Here!"
        android:textColor="#ffffff"
        android:textSize="30sp" />

    <FrameLayout
        android:id="@+id/flyt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/tv_ad"
        android:layout_below="@id/rlyt_title" />

</RelativeLayout>