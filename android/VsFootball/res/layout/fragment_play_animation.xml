<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_black_frame" >

            <ImageView
                android:id="@+id/iv_animation_screen"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/play_animation_screen" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_animation_replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/play_animation_replay" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1" >

                <Button
                    android:id="@+id/btn_animation_skip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@drawable/play_animation_skip" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>