<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_feedback_describe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/et_feedback"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/feedback_describe"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@id/et_feedback"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/rlyt_feedback_btns"
        android:layout_below="@id/tv_feedback_describe"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shape_black_frame"
        android:inputType="text"
        android:padding="10dp" />

    <RelativeLayout
        android:id="@id/rlyt_feedback_btns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_feedback_thank_you"
        android:layout_alignLeft="@id/et_feedback"
        android:layout_alignRight="@id/et_feedback"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="15dp" >

        <Button
            android:id="@+id/btn_feedback_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/shape_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Cancel"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_feedback_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_bg"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="Submit"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </RelativeLayout>

    <TextView
        android:id="@id/tv_feedback_thank_you"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="30dp"
        android:text="@string/feedback_thank_you"
        android:textColor="@color/grey"
        android:textSize="20sp" />

</RelativeLayout>